<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Background?>
<?import javafx.scene.layout.BackgroundFill?>
<?import javafx.scene.paint.Color?>

<StackPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ui.HomeScreenController">
   <!-- Background Image -->
   <ImageView fx:id="backgroundImageView" fitWidth="800.0" fitHeight="600.0" preserveRatio="true" />

   <!-- VBox content on top of the background -->
   <VBox alignment="CENTER" spacing="30.0">
      <children>
         <HBox alignment="TOP_RIGHT" prefHeight="19.0" prefWidth="531.0">
            <children>
               <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#handleSettingsButton" text="Settings" />
            </children>
         </HBox>

         <!-- Empty space between the top and bottom content -->
         <HBox alignment="TOP_RIGHT" prefHeight="231.0" prefWidth="531.0" />

         <!-- Bottom HBox with black background -->
         <HBox fx:id="bottomHBox" alignment="CENTER" prefHeight="76.0" prefWidth="531.0" spacing="60.0">
            <children>
               <Button fx:id="toLiveChatViewButton" mnemonicParsing="false" onAction="#handleToLiveChatButton" prefHeight="80.0" prefWidth="140.0" text="Live Chat" />
               <Button fx:id="aiChatButton" mnemonicParsing="false" onAction="#handleToPracticeTalkingButton" prefHeight="89.0" prefWidth="140.0" text="Ai Chat" />
               <Button fx:id="learnCWButton" mnemonicParsing="false" onAction="#handleLearnCWButton" prefHeight="86.0" prefWidth="140.0" text="Learn CW" />
            </children>
         </HBox>

      </children>
   </VBox>
</StackPane>
