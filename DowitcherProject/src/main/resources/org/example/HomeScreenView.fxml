                  <Slider fx:id="cwSpeedSlider" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Volume" />
                  <Slider fx:id="volumeSlider" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Static Amount" />
                  <Slider fx:id="staticSlider" />
                  <CheckBox fx:id="showCWLettersCheckBox" mnemonicParsing="false" onAction="#handleCWLettersCheckBox" text="Show CW Letters" />
                  <CheckBox fx:id="showCWAcronymsCheckBox" mnemonicParsing="false" onAction="#handleCWAcronymsCheckBox" text="Show CW Acronyms" />
