               </children>
            </VBox>
         </content>
    </Tab>
      <Tab text="Settings">
         <content>
            <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Settings">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
                  <Button fx:id="switchToControlMenuButton" mnemonicParsing="false" onAction="#switchToControlMenuView" text="Controls" />
