<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.PracticeTypingController">
   <children>
      <Label alignment="CENTER" prefHeight="31.0" prefWidth="261.0" text="Practice Typing">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox alignment="CENTER" prefHeight="207.0" prefWidth="91.0" spacing="100.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="99.0" text="English Output :" />
                  <Label alignment="CENTER" prefHeight="17.0" prefWidth="57.0" text="Input:" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="207.0" prefWidth="290.0" spacing="20.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <TextArea fx:id="englishOutput" prefHeight="167.0" prefWidth="314.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="61.0" prefWidth="600.0" spacing="20.0">
                     <children>
                        <TextArea fx:id="morseCodeInput" prefHeight="39.0" prefWidth="314.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="207.0" prefWidth="141.0" spacing="20.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="71.0" text="Morse Code" />
                  <Label prefHeight="17.0" prefWidth="82.0" text="Dit  -&gt;  &quot;.&quot;" />
                  <Label prefHeight="17.0" prefWidth="71.0" text="Dah  -&gt;  &quot;-&quot;" />
                  <Label prefHeight="17.0" prefWidth="144.0" text="Space for Letters  -&gt;  &quot; &quot;" />
                  <Label prefHeight="17.0" prefWidth="133.0" text="Space for words -&gt;  &quot;/&quot;" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="44.0" prefWidth="600.0" spacing="20.0">
         <children>
            <Button fx:id="paddleModeButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="96.0" text="Paddle" />
            <Button fx:id="straightKeyModeButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="99.0" text="Straight Key" />
            <Button fx:id="translateButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="82.0" text="Translate" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="45.0" prefWidth="600.0" spacing="20.0">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#switchToHomeScreenView" text="Main Menu" />
            <Button fx:id="practiceMenuButton" mnemonicParsing="false" onAction="#handlePracticeMenuButton" text="Practice Menu" />
            <Button fx:id="settingButton" mnemonicParsing="false" onAction="#switchToSettingsView" prefHeight="26.0" prefWidth="71.0" text="Settings" />
         </children>
      </HBox>
   </children>
</VBox>
