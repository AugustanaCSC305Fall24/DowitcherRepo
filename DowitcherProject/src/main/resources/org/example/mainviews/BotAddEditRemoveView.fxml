<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ui.practice.BotCreationController">

    <!-- Left Pane: Bot List -->
    <VBox alignment="CENTER" prefWidth="200.0" spacing="10.0">
        <Label style="-fx-font-weight: bold; -fx-padding: 10;" text="Current Bots" />
        <ListView fx:id="botListView" prefWidth="200.0" VBox.vgrow="ALWAYS" />
         <Button fx:id="removeButton" onAction="#handleRemoveButton" text="Remove Selected" />
    </VBox>

    <!-- Right Pane: Bot Form -->
    <VBox spacing="10.0" style="-fx-padding: 10;" HBox.hgrow="ALWAYS">
      <HBox alignment="CENTER" prefHeight="30.0" prefWidth="448.0" spacing="10.0">
         <children>
              <Label style="-fx-font-weight: bold;" text="Add/Edit Bot" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="399.0" spacing="10.0">
         <children>
               <Label text="Name:" />
               <TextField fx:id="nameField" prefHeight="25.0" prefWidth="271.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="30.0" prefWidth="399.0" spacing="10.0">
         <children>
      
                        <Label text="Context:" />
         </children>
      </HBox>
         <TextField fx:id="contextField" prefHeight="150.0" prefWidth="399.0" />
      <HBox alignment="CENTER" prefHeight="30.0" prefWidth="448.0" spacing="10.0">
         <children>
               <Button fx:id="addUpdateButton" onAction="#handleAddUpdateButton" text="Add/Update" />
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" text="Back" />
            <Button fx:id="goToChatButton" mnemonicParsing="false" onAction="#handleGoToChatButton" text="Go To Chat" />
            <Button fx:id="mainMenuButton" mnemonicParsing="false" onAction="#handleMainMenuButton" text="Main Menu" />
         </children>
      </HBox>
    </VBox>
</HBox>
