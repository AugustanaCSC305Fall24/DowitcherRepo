<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.ui.popup.ControlsHotkeysPopupController"
      style="-fx-background-color: #333333; -fx-padding: 10px;">

    <stylesheets>
        <URL value="@../styles/translation-label.css" />
    </stylesheets>

    <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Hotkeys">
            <font>
                <Font size="18.0" />
            </font>
        </Text>

        <VBox fx:id="hotkeysContainer" spacing="10.0" style="-fx-padding: 5;">
        </VBox>

        <Button text="Close" onAction="#closePopup" styleClass="custom-button" />
    </children>
</VBox>
