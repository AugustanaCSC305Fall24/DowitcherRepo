<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.AccountCreationController">
   <children>
      <Text layoutX="20.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome To Team Dowitchers Ham Radio Simulator!">
         <font>
            <Font size="24.0" />
         </font>
      </Text>
      <VBox alignment="TOP_CENTER" layoutX="179.0" layoutY="148.0" prefHeight="156.0" prefWidth="242.0" spacing="15.0">
         <children>
            <HBox alignment="CENTER" prefHeight="25.0" prefWidth="242.0" spacing="30.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username:" />
                  <TextField fx:id="usernameTextfield" onAction="#handleUsernameTextfield" text="Your Username Here" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="25.0" prefWidth="242.0" spacing="30.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password" />
                  <TextField fx:id="passwordTextfield" onAction="#handlePasswordTextfield" text="Your Password Here" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="25.0" prefWidth="242.0" spacing="30.0">
               <children>
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButton" text="Login" />
                  <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#handleSignUpButton" text="Sign Up" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
