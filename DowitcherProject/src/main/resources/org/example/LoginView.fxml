<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ui.AccountCreationController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome To Team Dowitchers Ham Radio Simulator!">
         <font>
            <Font size="24.0" />
         </font>
      </Text>
      <HBox alignment="CENTER" prefHeight="25.0" prefWidth="242.0" spacing="30.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username:" />
            <TextField fx:id="usernameTextfield" text="Your Username Here" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="25.0" prefWidth="242.0" spacing="30.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password" />
            <TextField fx:id="passwordTextfield" text="Your Password Here" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="25.0" prefWidth="242.0" spacing="30.0">
         <children>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButton" text="Login" />
            <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#handleSignUpButton" text="Sign Up" />
            <Button fx:id="continueAsGuest" mnemonicParsing="false" onAction="#handleContinueAsGuestButton" text="Continue As Guest" />
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleExitButton" text="Exit" />
         </children>
      </HBox>
   </children>
</VBox>
