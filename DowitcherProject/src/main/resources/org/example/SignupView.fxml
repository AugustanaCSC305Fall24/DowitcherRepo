<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.AccountCreationController">
   <children>
      <Text layoutX="219.0" layoutY="57.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Create Account">
         <font>
            <Font size="24.0" />
         </font>
      </Text>
      <VBox alignment="TOP_CENTER" layoutX="142.0" layoutY="91.0" prefHeight="200.0" prefWidth="155.0" spacing="20.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Choose Username:" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Confirm Username" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Choose Password:" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Confirm Password " />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Email" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Confirm Email" />
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" layoutX="304.0" layoutY="91.0" prefHeight="200.0" prefWidth="155.0" spacing="10.0">
