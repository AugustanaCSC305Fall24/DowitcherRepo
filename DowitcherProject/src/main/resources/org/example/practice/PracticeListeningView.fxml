<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ui.practice.PracticeListeningController">
   <children>
      <Label text="Practice Listening">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="249.0" prefWidth="610.0" spacing="30.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="275.0" spacing="10.0">
               <children>
                  <Label text="Your Translation -">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <ScrollPane fx:id="userInputScrollPane" prefHeight="200.0">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
                    </content>
                  </ScrollPane>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="275.0" spacing="10.0">
               <children>
                  <Label text="Correct Answer - ">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <ScrollPane fx:id="correctAnswerScrollPane" prefHeight="200.0">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
                    </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="15.0" right="15.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" prefHeight="72.0" prefWidth="580.0" spacing="10.0">
         <children>
            <Label prefHeight="17.0" prefWidth="119.0" text="Input Translation --&gt;" />
            <TextField fx:id="userInputTextField" prefHeight="26.0" prefWidth="339.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="45.0" prefWidth="633.0" spacing="10.0">
         <children>
            <Button fx:id="playPauseAudioButton" mnemonicParsing="false" onAction="#playPauseAudio" text="Play" />
            <Button fx:id="restartAudioButton" mnemonicParsing="false" onAction="#restartAudio" text="Restart Audio" />
            <Button fx:id="checkTranslationButton" mnemonicParsing="false" onAction="#checkTranslation" text="Check Translation" />
            <Button fx:id="newAudioButton" mnemonicParsing="false" onAction="#newAudio" text="New Audio" />
         </children>
         <padding>
            <Insets left="25.0" right="25.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" prefHeight="45.0" prefWidth="633.0" spacing="10.0">
         <children>
            <Button fx:id="goToSettingsButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToSettingsView" prefHeight="26.0" prefWidth="69.0" text="Settings" />
            <Button fx:id="practiceMenuButton" mnemonicParsing="false" onAction="#handlePracticeMenuButton" text="Practice Menu" />
            <Button fx:id="mainMenuButton" mnemonicParsing="false" onAction="#switchToHomeScreenView" prefHeight="26.0" prefWidth="80.0" text="Main Menu" />
         </children>
         <padding>
            <Insets left="25.0" right="25.0" />
         </padding>
      </HBox>
   </children>
</VBox>
